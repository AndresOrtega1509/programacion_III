<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.proyectofinal.proyectofinal.viewController.CuentaViewController"
      prefHeight="400.0" prefWidth="400.0" alignment="center" spacing="30.0" >

    <Label text="Crear Cuenta Bancaria" >
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Label text="Identificador Cuenta:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtIdCuenta" GridPane.columnIndex="1" GridPane.rowIndex="0" minHeight="30.0" />

        <Label text="Nombre del banco:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="txtNombreBanco" GridPane.columnIndex="1" GridPane.rowIndex="4" minHeight="30.0" />

        <Label text="Tipo de cuenta:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <ComboBox fx:id="cbTipoCuenta" GridPane.columnIndex="1" GridPane.rowIndex="6" minHeight="30.0" />
    </GridPane>

    <Button text="Crear" onAction="#crearCuenta" minHeight="40.0" minWidth="130.0" style="-fx-background-color: #00807a; -fx-text-fill: white" />

</VBox>
