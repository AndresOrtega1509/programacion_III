<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.preparcial_2.preparcial_2.ejercicio4.RestauranteViewController"
      prefHeight="400.0" prefWidth="400.0" alignment="center" spacing="30.0" >

    <Label text="Iniciar sesión" >
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" minHeight="30.0" />

        <Label text="Numero de identificación:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <PasswordField fx:id="txtContrasenia" GridPane.columnIndex="1" GridPane.rowIndex="4" minHeight="30.0" />
    </GridPane>

    <Button text="Iniciar sesión" onAction="#logiarse" minHeight="40.0" minWidth="130.0" style="-fx-background-color: #00807a; -fx-text-fill: white" />

</VBox>
